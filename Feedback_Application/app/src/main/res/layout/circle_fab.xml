<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout


        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fab_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="?android:attr/actionModeSelectAllDrawable"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            app:elevation="10dp"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/fab_bottom"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toLeftOf="@+id/fab_main"
            app:layout_constraintBottom_toBottomOf="@+id/fab_main"
            app:layout_constraintTop_toTopOf="@+id/fab_main"
            app:backgroundTint="@color/colorPrimary"
            android:layout_marginEnd="8dp"
            android:visibility="visible"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/fab_top"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintRight_toLeftOf="@+id/fab_main"
            app:layout_constraintBottom_toTopOf="@+id/fab_main"
            android:visibility="visible"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_lock_power_off"
            android:id="@+id/fab_middle"
            app:layout_constraintRight_toLeftOf="@+id/fab_main"
            app:layout_constraintBottom_toTopOf="@+id/fab_main"
            app:backgroundTint="@color/colorPrimary"
            android:visibility="visible"/>
    </android.support.constraint.ConstraintLayout>
</merge>